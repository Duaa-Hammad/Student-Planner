@model StudentPlanner.BLL.Models.StudentVM


<div class="d-flex justify-content-center align-items-center">
    <div class="card profile-card shadow-lg rounded-4 p-4 col-md-9">
        <div class="text-center mb-4">
            <div class="position-relative d-inline-block">
               
                @if(Model.Id==1)
                {               
                    <img src="~/assets/Users/ProfileBlue.jpg" class="rounded-circle img-thumbnail" width="130" height="130" alt="Profile Picture">
                }
                else
                {
                   <img src="~/assets/Users/Default2.jpg" class="rounded-circle img-thumbnail" width="130" height="130" alt="Profile Picture">
                }
                @* <i class="bi bi-pencil-fill position-absolute bottom-0 end-0 bg-primary text-white p-1 rounded-circle edit-icon"></i> *@
            </div>
            <h4 class="mt-3">@Model.Name</h4>
        </div>

        <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">Name</small>
                    <div class="fw-bold">@Model.Name</div>
                </div>
                <i class="bi bi-pencil edit-icon"></i>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">Email</small>
                    <div class="fw-bold">@Model.Email</div>
                </div>
                <i class="bi bi-pencil edit-icon"></i>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <small class="text-muted">Semester</small>
                    <div class="fw-bold">@Model.Semester<span>th</span> Semester</div>
                </div>
                <i class="bi bi-pencil edit-icon"></i>
            </li>
        </ul>
    </div>
</div>