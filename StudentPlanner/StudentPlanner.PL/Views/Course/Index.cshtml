@model IEnumerable<StudentPlanner.BLL.Models.CourseWithRemindersVM>;
@{
    ViewData["Title"] = "Courses";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>View All Courses</h2>

@* ----------------------------Courses--------------------------------------- *@
<!-- /.card -->
<div class="col-md-12">

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title fw-bold">All Your Courses</h3>
        </div>
        <!-- /.card-header -->

        @*Start Modal for adding reminders *@

        @* The modal is the container that will show the form inline (instead of redirecting to another page). *@
        @* This keeps the user on the same page and opens a modern, clean popup. *@
        <div class="modal fade" id="reminderModal" tabindex="-1" aria-labelledby="reminderModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="reminderModalLabel">Add Reminder</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="reminderModalBody">
                        <div class="text-center text-muted">Loading...</div>
                    </div>
                </div>
            </div>
        </div>
        @*End Modal for adding reminders *@


        <div class="card-body p-0">
            <table class="table table-striped">
                <thead>
                    <tr class="text-center">
                        <th style="width: 10px">#</th>
                        <th>Course Name</th>
                        <th>Course Code</th>
                        <th>Note</th>
                        <th>Deadline</th>
                        <th>Remind Me</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @{
                        int count = 0;
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-danger text-center fw-bold">No Courses!</td>
                        </tr> 
                    }
                    else
                    {
                        foreach (var Item in Model)
                        {
                            count++;
                            <tr class="align-middle">
                                <td>@count</td>
                                <td>@Item.Course.Name</td>
                                <td>@Item.Course.Code</td>
                             
                                    @if (Item.Reminders.Any())
                                    {
                                        @foreach (var rem in Item.Reminders)
                                        {
                                            if (rem.CourseId == Item.Course.Id)
                                            {
                                                <td>@rem.Note</td>
                                                <td>@rem.Deadline</td>
                                                <td>@rem.ReminderDate</td>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        @* Instead of linking directly to /Reminder/Create, you’ll use JavaScript to load that page's content dynamically inside the modal. *@
                                    <td colspan="4">
                                        <button class="btn btn-primary btn-sm" onclick="openReminderModal(@Item.Course.Id)">Add Reminder</button>
                                    </td>
                                    }                            
                            </tr>
                        }
                    }          
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
</div>


@section Scripts {
    <script>
        function openReminderModal(courseId) {
            const modalBody = document.getElementById("reminderModalBody");
            modalBody.innerHTML = "<div class='text-center text-muted'>Loading...</div>";

            const modal = new bootstrap.Modal(document.getElementById('reminderModal'));
            modal.show();

            fetch(`/Reminder/Create?courseId=${courseId}`)
                .then(response => response.text())
                .then(html => {
                    modalBody.innerHTML = html;
                })
                .catch(error => {
                    modalBody.innerHTML = "<div class='text-danger'>Error loading form</div>";
                    console.error(error);
                });
        }
    </script>
}

