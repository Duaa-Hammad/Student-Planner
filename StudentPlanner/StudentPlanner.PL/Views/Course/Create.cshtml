@model StudentPlanner.BLL.Models.CourseVM
@{
    ViewData["Title"] = "Add Course";
}
<h3>Add New Course</h3>

<!--begin::Col-->
<div class="col-md-10">
    <!--begin::Quick Example-->
    <div class="card card-primary card-outline mb-4">
        <!--begin::Header-->
        <div class="card-header">
            <div class="card-title fw-bold">
                Add New Course
                </div>
            </div>
        <!--end::Header-->
        <!--begin::Form-->
        <form asp-controller="Course" asp-action="Create">
            @Html.AntiForgeryToken()
            <!--begin::Body-->
            <div class="card-body">
                <div class="mb-3">
                    <label for="Name" class="form-label">Course Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                @* --------------------------------------- *@
                <div class="mb-3">
                    <label for="Code" class="form-label">Course Code</label>
                    <input type="text" class="form-control" asp-for="Code" />
                </div>
                @* --------------------------------------- *@
                <div class="mb-3">
                    <label for="Hours" class="form-label">Course Hours / Credit</label>
                    <input type="text" class="form-control" asp-for="Hours" />
                </div>
                @* --------------------------------------- *@
                </div>
            <!--end::Body-->
            <!--begin::Footer-->
            <div class="card-footer">
                <button type="submit" class="btn btn-success">Add Course</button>
            </div>
            <!--end::Footer-->
        </form>
        <!--end::Form-->
    </div>
</div>
    <!--end::Quick Example-->
