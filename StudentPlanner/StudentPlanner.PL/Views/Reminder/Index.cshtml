@model IEnumerable<StudentPlanner.BLL.Models.ReminderVM>;
@using StudentPlanner.BLL.Models
@{
    ViewData["Title"] = "Reminders";
}
<h3>View All Reminders</h3>
@{
    var timeZone = TimeZoneInfo.FindSystemTimeZoneById("E. Europe Standard Time");
}
@* ----------------------------Courses--------------------------------------- *@
<!-- /.card -->
<div class="col-md-11">

    <div class="card mb-4">
        <div class="card-header">
            <h3 class="card-title fw-bold">All Your Reminders</h3>
        </div>
        <!-- /.card-header -->

        <div class="card-body p-0 table-responsive">
            <table class="table table-striped">
                <thead class="text-center">
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Course Name</th>
                        <th>Course Code</th>
                        <th>Reminder Type</th>
                        <th>Reminder Date</th>
                        <th>Status</th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @{
                        int count = 1;
                    }
                    @if (!Model.Any())
                    {
                           <tr>
                            <td colspan="7" class="text-danger text-center fw-bold">No Reminders</td>
                           </tr> 
                    }
                    else
                    {
                        foreach (var Item in Model)
                        {
                            var reminderLocalTime = TimeZoneInfo.ConvertTimeFromUtc(Item.ReminderDate, timeZone);

                            <tr class="align-middle">
                                <td>@count</td>
                                <td>@Item.Course.Name</td>
                                <td>@Item.Course.Code</td>

                                @if (Item.Type == ReminderType.Assignment)
                                {
                                    <td class="text-success fw-bold">Assignment</td>
                                }
                                else if (Item.Type == ReminderType.Exam)
                                {
                                    <td class="text-danger fw-bold">Exam</td>
                                }
                                <td>
                                    @* @Item.ReminderDate.ToString("dd/MM/yyyy") *@
                                    @reminderLocalTime.ToString("f")
                                </td>
                                <td>
                                    @if (@Item.IsSent)
                                    {
                                        <span class="badge bg-success">Sent</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Manage" asp-controller="Reminder" class="btn btn-sm btn-success">Manage</a>
                                </td>
                            </tr>
                            count++;                          
                        }
                    }          
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
</div>


@section Scripts {
        <script>
            function openReminderModal(courseId) {
                const modalBody = document.getElementById("reminderModalBody");
                modalBody.innerHTML = "<div class='text-center text-muted'>Loading...</div>";

                const modal = new bootstrap.Modal(document.getElementById('reminderModal'));
                modal.show();

                fetch(`/Reminder/Create?courseId=${courseId}`)
                    .then(response => response.text())
                    .then(html => {
                        modalBody.innerHTML = html;
                    })
                    .catch(error => {
                        modalBody.innerHTML = "<div class='text-danger'>Error loading form</div>";
                        console.error(error);
                    });
            }
        </script>
}

