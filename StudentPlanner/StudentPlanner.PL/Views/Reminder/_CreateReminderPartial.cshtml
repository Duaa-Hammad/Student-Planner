@model StudentPlanner.BLL.Models.ReminderVM

<form asp-action="Create" asp-controller="Reminder">

    <input type="hidden" asp-for="CourseId" />
@* --------------------------------------------------------------------------- *@

    @*Start drop-down list *@

    @* <select asp-for="Type" asp-items="(SelectList)ViewBag.DepList" class="form-select"> *@
    @*     <option disabled selected>Choose Type</option> *@
    @* </select> *@

    <div class="mb-3 position-relative">
        <label asp-for="Type" class="form-label">Type</label>

        <div class="position-relative">
            <select asp-for="Type" asp-items="(SelectList)ViewBag.DepList" class="form-select pe-5">
                <option value="" disabled selected hidden>Choose Type</option>
            </select>
        </div>

        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    @*End drop-down list *@
@* --------------------------------------------------------------------------- *@
    <div class="mb-3">
        <label asp-for="Deadline" class="form-label">Deadline</label>
        <input asp-for="Deadline" type="datetime-local" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Remind Me</label>
        <select asp-for="ReminderOffsetDays" class="form-select">
            <option value="" disabled selected hidden>Select Reminder Time</option>
            <option value="1">1 Day Before</option>
            <option value="3">3 Days Before</option>
            <option value="7">1 Week Before</option>
            <option value="30">1 Month Before</option>
        </select>
        <span asp-validation-for="ReminderOffsetDays" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label">Add Note</label>
        <input asp-for="Note" type="text" class="form-control" />
    </div>

  
    @* ------------------------------------- *@

    <button type="submit" class="btn btn-success">Set Reminder</button>
</form>

@section CustomFiles
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
}